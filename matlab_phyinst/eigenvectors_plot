function [] = eigenvectors_plot(modenumber);
N = modenumber;

hor_pic_nmb = ceil(sqrt(3*N));
vert_pic_nmb = ceil(3*N/hor_pic_nmb);   

figure
    set(gcf,'numbertitle','off')
    set(gcf,'name','eigenvectors')
    set(gcf,'Visible','on')
    for i=N
        clear VX VY VZ
        subplot(vert_pic_nmb,hor_pic_nmb,i);
        %scale = 0;        
        VX = result_finiyukawa.sort_V_x(:,i);
        VY = result_finiyukawa.sort_V_y(:,i);
        VZ = result_finiyukawa.sort_V_z(:,i);
        x = result_finiyukawa.x(1,i);
        y = result_finiyukawa.y(1,i);
        z = result_finiyukawa.z(1,i);
% VX,VY,VZ are the projections of each eigenvector onto the x-,y-, and z
% axes
        quiver3(x,y,z,VX,VY,VZ); 
        xlabel('x / mm');
        ylabel('y / mm');
        zlabel('z / mm')
 % The title  is the corresponding eigenvalue
        title(num2str(sorted_eigenvalues(i),3));
        
        clear VX VY VZ
    end
